-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")

-- Player
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- UI Enhancements
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.24, 0, 0.1, 0) -- Slightly smaller
frame.Position = UDim2.new(0.38, 0, 0.005, 0) -- Higher up for better visibility
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BackgroundTransparency = 0.25 -- Glass effect
frame.BorderSizePixel = 0
frame.Parent = screenGui
frame.ClipsDescendants = true

-- Rounded Corners
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.2, 0) -- More rounded edges
uiCorner.Parent = frame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.25, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.Text = "üõ†Ô∏è Better Fruit Notifier üõ†Ô∏è"
titleLabel.Parent = frame

-- Fruit Info Label
local fruitLabel = Instance.new("TextLabel")
fruitLabel.Size = UDim2.new(1, -10, 0.7, 0)
fruitLabel.Position = UDim2.new(0, 5, 0.25, 0)
fruitLabel.BackgroundTransparency = 1
fruitLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
fruitLabel.TextScaled = true
fruitLabel.Font = Enum.Font.Gotham
fruitLabel.Text = "üîç Searching for fruits..."
fruitLabel.TextWrapped = true
fruitLabel.Parent = frame

-- Glow Effect
local glow = Instance.new("UIStroke")
glow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
glow.Thickness = 2
glow.Color = Color3.fromRGB(255, 170, 0) -- Default glow
glow.Parent = frame

-- Function to find nearest fruit
local fruitsList = {
    "Fruit ", "Rocket Fruit", "Spin Fruit", "Ghost Fruit", "Spring Fruit",
    "Bomb Fruit", "Spike Fruit", "Smoke Fruit", "Blade Fruit", "Sand Fruit",
    "Ice Fruit", "Dark Fruit", "Diamond Fruit", "Light Fruit", "Rubber Fruit",
    "Barrier Fruit", "Magma Fruit", "Phoenix Fruit", "Love Fruit", "Spider Fruit",
    "Sound Fruit", "Buddha Fruit", "Quake Fruit", "Gravity Fruit", "Control Fruit",
    "T-Rex Fruit", "Mammoth Fruit", "Spirit Fruit", "Venom Fruit", "Shadow Fruit",
    "Rumble Fruit", "Portal Fruit", "Blizzard Fruit", "Dragon Fruit", "Leopard Fruit",
    "Dough Fruit", "Dragon (West) Fruit", "Dragon (East) Fruit", "Kitsune Fruit", "Gas Fruit", "Flame Fruit", "Yeti Fruit"
}

local function findNearestFruit()
    local nearestFruit = nil
    local minDistance = math.huge
    local fruitCount = 0

    for _, fruit in ipairs(Workspace:GetChildren()) do
        if table.find(fruitsList, fruit.Name) and fruit:FindFirstChild("Handle") then
            local distance = (humanoidRootPart.Position - fruit.Handle.Position).Magnitude
            fruitCount = fruitCount + 1

            if distance < minDistance then
                minDistance = distance
                nearestFruit = fruit
            end
        end
    end
    return nearestFruit, minDistance, fruitCount
end

-- Smooth fade-in animation
frame.BackgroundTransparency = 1
titleLabel.TextTransparency = 1
fruitLabel.TextTransparency = 1
glow.Transparency = 1

local fadeIn = TweenService:Create(frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 0.25})
local fadeInTitle = TweenService:Create(titleLabel, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 0})
local fadeInFruitLabel = TweenService:Create(fruitLabel, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 0})
local fadeInGlow = TweenService:Create(glow, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Transparency = 0})

fadeIn:Play()
fadeInTitle:Play()
fadeInFruitLabel:Play()
fadeInGlow:Play()

-- Update UI every 0.05 seconds
spawn(function()
    while true do
        local nearestFruit, distance, fruitCount = findNearestFruit()
        
        if nearestFruit then
            fruitLabel.Text = string.format("üçé Nearest: %s\nüö© Distance: %dm\n‚ö° Fruits Nearby: %d", nearestFruit.Name, math.floor(distance), fruitCount)
            
            -- Dynamic UI glow color
            if fruitCount >= 3 then
                glow.Color = Color3.fromRGB(0, 255, 0) -- Green for many fruits
            elseif fruitCount == 2 then
                glow.Color = Color3.fromRGB(255, 255, 0) -- Yellow for a medium amount
            else
                glow.Color = Color3.fromRGB(255, 0, 0) -- Red for only one fruit
            end
            
            -- Adjust transparency dynamically
            local newTransparency = 0.25 - (fruitCount * 0.02) -- More fruits = less transparency
            frame.BackgroundTransparency = math.clamp(newTransparency, 0.15, 0.25)
        else
            fruitLabel.Text = "‚ùå No fruits found"
            glow.Color = Color3.fromRGB(255, 170, 0) -- Default orange glow
            frame.BackgroundTransparency = 0.25 -- Reset transparency
        end

        task.wait(0.05)
    end
end)
