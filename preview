-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")

-- Player
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- UI Enhancements
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.32, 0, 0.18, 0)
frame.Position = UDim2.new(0.34, 0, 0.02, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.4 -- Frosted Glass Effect
frame.BorderSizePixel = 0
frame.Parent = screenGui
frame.ClipsDescendants = true

-- Rounded corners for a modern look
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.2, 0)
uiCorner.Parent = frame

-- Frosted Glass Blur Effect
local blurEffect = Instance.new("ImageLabel")
blurEffect.Size = UDim2.new(1, 0, 1, 0)
blurEffect.Position = UDim2.new(0, 0, 0, 0)
blurEffect.BackgroundTransparency = 1
blurEffect.Image = "rbxassetid://1316045217" -- Glass Blur Texture
blurEffect.ImageColor3 = Color3.fromRGB(255, 255, 255)
blurEffect.ImageTransparency = 0.8
blurEffect.Parent = frame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.25, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.Text = "üõ†Ô∏è Better Fruit Notifier üõ†Ô∏è"
titleLabel.Parent = frame

-- Fruit Info Label
local fruitLabel = Instance.new("TextLabel")
fruitLabel.Size = UDim2.new(1, -10, 0.7, 0)
fruitLabel.Position = UDim2.new(0, 5, 0.25, 0)
fruitLabel.BackgroundTransparency = 1
fruitLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
fruitLabel.TextScaled = true
fruitLabel.Font = Enum.Font.Gotham
fruitLabel.TextStrokeTransparency = 0.15
fruitLabel.Text = "üîç Searching for fruits..."
fruitLabel.TextWrapped = true
fruitLabel.Parent = frame

-- Function to create a subtle pulse effect
local function pulseEffect(obj)
    local tweenInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out, -1, true)
    local tween = TweenService:Create(obj, tweenInfo, {TextTransparency = 0.5})
    tween:Play()
end

-- Function to find nearest fruit
local fruitsList = {"Fruit ", "Rocket Fruit", "Spin Fruit", "Ghost Fruit", "Spring Fruit", "Bomb Fruit", "Spike Fruit", "Smoke Fruit", "Blade Fruit", "Sand Fruit", "Ice Fruit", "Dark Fruit", "Diamond Fruit", "Light Fruit", "Rubber Fruit", "Barrier Fruit", "Magma Fruit", "Phoenix Fruit", "Love Fruit", "Spider Fruit", "Sound Fruit", "Buddha Fruit", "Quake Fruit", "Gravity Fruit", "Control Fruit", "T-Rex Fruit", "Mammoth Fruit", "Spirit Fruit", "Venom Fruit", "Shadow Fruit", "Rumble Fruit", "Portal Fruit", "Blizzard Fruit", "Dragon Fruit", "Leopard Fruit", "Dough Fruit", "Dragon (West) Fruit", "Dragon (East) Fruit", "Kitsune Fruit", "Gas Fruit", "Yeti Fruit"}

local function findNearestFruit()
    local nearestFruit = nil
    local minDistance = math.huge
    local fruitCount = 0

    for _, fruit in ipairs(Workspace:GetChildren()) do
        if table.find(fruitsList, fruit.Name) and fruit:FindFirstChild("Handle") then
            local distance = (humanoidRootPart.Position - fruit.Handle.Position).Magnitude
            fruitCount = fruitCount + 1

            if distance < minDistance then
                minDistance = distance
                nearestFruit = fruit
            end
        end
    end
    return nearestFruit, minDistance, fruitCount
end

-- Smooth fade-in animation for UI
frame.BackgroundTransparency = 1
titleLabel.TextTransparency = 1
fruitLabel.TextTransparency = 1

local fadeIn = TweenService:Create(frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 0.4})
local fadeInTitle = TweenService:Create(titleLabel, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 0})
local fadeInFruitLabel = TweenService:Create(fruitLabel, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 0})

fadeIn:Play()
fadeInTitle:Play()
fadeInFruitLabel:Play()

-- Update UI every 0.05 seconds
spawn(function()
    while true do
        local nearestFruit, distance, fruitCount = findNearestFruit()
        
        if nearestFruit then
            fruitLabel.Text = string.format("üçé Nearest: %s\nüö© Distance: %dm\n‚ö° Fruits Nearby: %d", nearestFruit.Name, math.floor(distance), fruitCount)
            
            -- Adjust transparency dynamically
            local newTransparency = 0.4 - (fruitCount * 0.02) -- More fruits = less transparency
            frame.BackgroundTransparency = math.clamp(newTransparency, 0.25, 0.4)
        else
            fruitLabel.Text = "‚ùå No fruits found"
            frame.BackgroundTransparency = 0.4 -- Reset transparency
        end

        task.wait(0.05)
    end
end)

-- Apply pulse effect to fruit label
pulseEffect(fruitLabel)
